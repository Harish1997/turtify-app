<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/turtcardView"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:layout_marginBottom="4dp"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/turidtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center_horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="2dp"
        android:text="Turtle id:"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@color/cardview_light_background">


        <ImageView
            android:id="@+id/turtimg"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/olive1" />

        <TextView
            android:id="@+id/turtitle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="229dp"
            android:background="@color/trans"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/turdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:background="@color/trans"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Description"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/turdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/trans2"
            android:padding="3dp"
            android:text="Dated on:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>