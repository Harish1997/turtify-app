<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repp.png"
    android:layout_width="match_parent"
    android:layout_height="1300dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1300dp"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/chtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/turtledeadradio"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Give a suitable title for the nest:"
                android:textColor="#0E3B43"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleget"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:text="Team Leader:"
                android:textColor="#0E3B43"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/leaderget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textdesc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="20"
                android:scrollbars="vertical"
                android:maxLength="2000"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaderget"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:text="Number of eggs:"
                android:textColor="#0E3B43"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/noofeggs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="type the count"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/reportnesttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:padding="8dp"
                android:text="Reports Section"
                android:textColor="#69626D"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/uploadb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cavitywidth"
                android:layout_margin="6dp"
                android:text="Click Here to Upload an image" />

            <Button
                android:id="@+id/submitb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploadb"
                android:layout_margin="20dp"
                android:text="Submit Report!" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noofeggs"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Nest Cavity Measurements"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Neck Width:"
                android:textColor="#0E3B43" />

            <EditText
                android:id="@+id/neckwidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="In centimeters"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/neckwidth"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Surface to eggs:"
                android:textColor="#0E3B43" />

            <EditText
                android:id="@+id/surfacetoeggs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="In centimetres"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surfacetoeggs"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Surface to Bottom:"
                android:textColor="#0E3B43" />

            <EditText
                android:id="@+id/surftobot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="In centimetre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surftobot"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Cavity Width:"
                android:textColor="#0E3B43" />

            <EditText
                android:id="@+id/cavitywidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView16"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="In centimetres"
                android:inputType="textPersonName" />

            <RadioButton
                android:id="@+id/tnestradio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Turtle Nest"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tnestradio"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:text="Turtle Spotters:"
                android:textColor="@color/cast_expanded_controller_background_color" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Nesting Ground:"
                android:textColor="?android:attr/colorForeground" />

            <RadioButton
                android:id="@+id/turtleliveradio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Turtle (Live)"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/turtledeadradio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/turtleliveradio"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Dead Turtle"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/titleget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chtextview"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text|textMultiLine" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reportnesttitle"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:text="Make sure you fill out all the boxes in a descriptive manner" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="3dp"
                android:background="@android:color/holo_orange_dark" />

        </RelativeLayout>

    </ScrollView>
</LinearLayout>