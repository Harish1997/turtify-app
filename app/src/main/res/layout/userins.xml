<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:background="@android:color/black"
            android:paddingBottom="5dp"
            android:text="How to use Turtify"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="33sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/vvv"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView45"
            android:background="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/vvv"
            android:padding="10dp"
            android:text="If you have a turtify account whose credentials are given only to members belonging to a registered club ,enter your username and password and login. \n Swipe through the tabs to navigate between the modules. \n To report a nest/live turtle or a dead turtle ,navigate to the reports menu of the app and select the required option and fill in the details.It is required that you upload a photo alongside \n\n All the reports that have been uploaded are contained in a cloud repostory and can be viewed on the View Nest and Turtles menu."
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView52"
            android:padding="6dp"
            android:text="Ensure that your GPS location is turned on while using the reports menu. Make sure that all required permissions are granted to turtify on your device by Settings -> Apps -> Turtify -> Permissions"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:layout_below="@+id/textView54"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/s1" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:layout_below="@+id/imageView12"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/s2" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:layout_below="@+id/imageView13"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/s3" />

    </RelativeLayout>
</ScrollView>